# -*- ruby -*-

require 'rubygems'
require 'hoe'
require './lib/cinder.rb'

Hoe.new('cinder', Cinder::VERSION) do |p|
  p.summary = "A transcript scraper for Campfire"
  p.description = "A scraper to store transcripts from Campfire, the 37Signals chat application, as local csv files."
  p.author = "Mike Bueti"
  p.email = "matt@eastmedia.com"
  p.url = 'http://github.com/eastmedia/cinder'
  p.extra_deps << ['mechanize']
  p.extra_deps << ['hpricot']
end


